<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>.


  
<p>Field is required.</p>
<form action="/inv/add-classification" method="post" class="registration-form">
    <div>
        <label for="name">Classification Name</label>
        <input type="text" id="name" name="classification_name" required pattern="^[a-zA-Z]+$" value="<%= locals.classification_name %>" >
        <div>NAME MUST BE ALPHABETIC CHARATERS ONLY.</div>
    </div>
    <button type="submit">Add Classification</button>
</form>