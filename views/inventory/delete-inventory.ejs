<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>.


  
<p>All Fields are required.</p>


<form action="/inv/delete/" method="post" class="registration-form" id="updateForm">
    <div>
        <label for="classificationList">Classification Name</label>
        <%- classificationSelect %>
    </div>
    <div>
        <label for="make"><%= locals.inv_make %></label>
        <input type="text" id="make" name="inv_make" required pattern="^[a-zA-Z]+$" value="<%= inv_make %>" title="Value must be a string." >
    </div>
    <div>
        <label for="model">Model</label>
        <input type="text" id="model" name="inv_model" required pattern="^[a-zA-Z]+$" value="<%= locals.inv_model %>" title="Value must be a string." >
    </div>
    <div>
        <label for="price">Price</label>
        <input type="text" id="price" name="inv_price" required pattern="^[0-9]+$" value="<%= locals.inv_price %>" title="Value must be an integer or decimal number." >
    </div>
    <div>
        <label for="year">Year</label>
        <input type="text" id="year" name="inv_year" required pattern="^\d{4}$" value="<%= locals.inv_year %>" title="Value must be a four digit year." >
    </div>
    <button type="submit" >Delete Vehicle</button>
    <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>


</form>
