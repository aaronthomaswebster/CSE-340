<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
<p>All fields are required.</p>
<form action="/account/update" method="post" class="registration-form">
    <div>
        <label for="first_name">First Name</label>
        <input type="text" id="first_name" name="account_firstname" value="<%= locals?.accountData?.account_firstname %>" required>
    </div>
    <div>
        <label for="last_name">Last Name</label>
        <input type="text" id="last_name" name="account_lastname" value="<%= locals?.accountData?.account_lastname %>" required>
    </div>
    <div>
        <label for="email">Email</label>
        <input type="email" id="email" name="account_email" value="<%= locals?.accountData?.account_email %>" required>
    </div>
    <button type="submit">Update</button>
</form>


<form action="/account/change-password" method="post" class="registration-form">
    <div>
        <label for="password">Password</label>
        <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" >
        <div>Passwords must be a minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</div>
    </div>
    <button type="submit">Change Password</button>
</form>