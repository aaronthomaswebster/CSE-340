<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<form action="/account/login" method="post" class="login-form" id="loginForm">
    <div>
        <label for="email">Email</label>
        <input type="email" id="email" name="account_email" value="<%= locals.account_email %>" required>
    </div>
    <div>
        <label for="password">Password</label>
        <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" >
        <div>Passwords must be a minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</div>
    </div>
    <button type="submit">Login</button>
    <p>No Account? <a href="/account/registration">Sign-up</a></p>
</form>